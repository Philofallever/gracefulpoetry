{
	"name": "gracefulpoetry",
	"displayName": "中文诗歌",
	"description": "显示唐诗宋词的小插件",
    "publisher": "Fallever",
    "repository": {
        "type": "github",
        "url": "https://github.com/Philofallever/gracefulpoetry"
    },
    "icon": "media/icon.png",
    "author": "Fallever",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.22.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"views": {
			"explorer": [
				{
					"type": "webview",
					"id": "gracefulPoetry.view",
					"name": "中文诗歌"
				}
			]
		},
        "menus": {
            "view/title": [
                {
                    "command": "gracefulpoetry.refresh",
                    "when": "view == gracefulPoetry.view",
                    "group": "navigation"
                }
            ],
            "commandPalette": [
                {
                    "command": "gracefulpoetry.refresh",
                    "when": "never"
                }
            ]
        },
		"commands": [
			{
				"command": "gracefulpoetry.refresh",
				"title": "下一首",
                "icon":"$(refresh)",
                "category": "诗词"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.22.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2",
		"ts-loader": "^9.2.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0"
	}
}
